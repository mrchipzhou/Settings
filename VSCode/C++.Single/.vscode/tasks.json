{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clang++",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++11",
                "-g",
                "${workspaceRoot}/main.cpp",
                "-o",
                "/tmp/main"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}